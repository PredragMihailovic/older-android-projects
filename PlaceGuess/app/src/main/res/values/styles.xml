<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name = "NoActionBar" parent = "Theme.AppCompat.NoActionBar">
        <item name = "android:windowActionBar">false</item>
        <item name = "android:windowNoTitle">true</item>
        <item name= "android:windowTranslucentStatus">true</item>
    </style>

    <style name="toolbarStyle" >
        <item name= "android:windowTranslucentStatus">false</item>
        <item name="android:background">@color/colorPrimaryTransparent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="imageText">
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:background">@color/imageTextBackground</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="titleText">
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="currentScoreStyle">
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="secondsStyle">
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">80sp</item>
    </style>

    <style name="mapButtonStyle">
        <item name="android:src">@drawable/ic_action_tick</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>s

    <style name="endScoreStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="goToHomeButtonStyle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
